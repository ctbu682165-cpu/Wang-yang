    <div class="container">
        <h1>European City Weather Dashboard</h1>

        <!-- 错误提示：捕获FastAPI抛出的异常 -->
        {% if request.query_params.get("error") %}
            <div class="error-message">
                {{ request.query_params.get("error") }}
            </div>
        {% endif %}

        <!-- 1. 添加城市表单 -->
        <form action="/cities/add" method="post" class="add-form">
            <div class="form-group">
                <input 
                    type="text" 
                    name="name" 
                    placeholder="City Name (e.g., Paris)" 
                    required
                >
            </div>
            <div class="form-group">
                <input 
                    type="number" 
                    step="0.0001" 
                    name="latitude" 
                    placeholder="Latitude (e.g., 48.8566)" 
                    min="-90" 
                    max="90" 
                    required
                >
            </div>
            <div class="form-group">
                <input 
                    type="number" 
                    step="0.0001" 
                    name="longitude" 
                    placeholder="Longitude (e.g., 2.3522)" 
                    min="-180" 
                    max="180" 
                    required
                >
            </div>
            <button type="submit" class="btn btn-add">Add City</button>
        </form>

        <!-- 2. 操作按钮：更新温度/重置列表 -->
        <div class="action-btns">
            <form action="/cities/update" method="post" style="display: inline;">
                <button type="submit" class="btn btn-update">Update All Temperatures</button>
            </form>
            <form action="/cities/reset" method="post" style="display: inline;">
                <button 
                    type="submit" 
                    class="btn btn-reset"
                    onclick="return confirm('Are you sure to reset to default cities?')"
                >
                    Reset City List
                </button>
            </form>
        </div>

        <!-- 3. 城市天气表格 -->
        {% if cities %}
            <table class="weather-table">
                <thead>
                    <tr>
                        <<th>City Name</</th>
                        <<th>Current Temperature (°C)</</th>
                        <<th>Last Updated</</th>
                        <<th>Action</</th>
                    </tr>
                </thead>
                <tbody>
                    {% for city in cities %}
                        <tr>
                            <td>{{ city.name }}</td>
                            <td>
                                {% if city.temperature is not none %}
                                    <span class="temp-value">{{ "%.1f"|format(city.temperature) }}</span>
                                {% else %}
                                    No Data
                                {% endif %}
                            </td>
                            <td>
                                {% if city.updated_at is not none %}
                                    <span class="update-time">
                                        {{ city.updated_at.strftime("%Y-%m-%d %H:%M") }}
                                    </span>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                <form 
                                    action="/cities/remove/{{ city.id }}" 
                                    method="post" 
                                    style="display: inline;"
                                    onclick="return confirm('Delete {{ city.name }}?')"
                                >
                                    <button type="submit" class="btn btn-delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="empty-state">
                No cities available. Click "Reset City List" to load default European cities.
            </div>
        {% endif %}
